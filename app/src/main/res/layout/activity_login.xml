<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:background="@drawable/tech1"
    tools:context="com.example.camk1.app_tienda.LoginActivity">


    <TextView
        android:text="BIENVENIDO A LA TIENDA CORTOCIRCUITO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textSize="34sp"
        android:textAlignment="center"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="USUARIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView8"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/txtusuario"
        android:hint="usuario"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/txtusuario"
        android:layout_alignStart="@+id/txtusuario"
        android:layout_marginTop="23dp"
        android:id="@+id/txtpassword"
        android:singleLine="true"
        android:hint="password" />

    <Button
        android:text="INGRESAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingresar"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible"
        tools:ignore="HardcodedText"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="#0a136b"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/txtpassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView9"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/txtusuario"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
